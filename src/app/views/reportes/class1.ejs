<!DOCTYPE html>
<html html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Reportes</title>
    <link 
      rel="icon" 
      type="image/png" 
      href="https://www.pucevirtual.edu.ec/wp-content/uploads/2017/01/iconoceleste.gif"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('../home/header.ejs') %>

    <div class="row">
      <div class="col-md-6 mt-4 text-center">
        <table class="table table-striped table-bordered">
          <tr>
            <th>Nombre del producto</th>
            <th>Linea del producto</th>
            <th>Total de ventas</th>
            <th>Total de compradores</th>
          </tr>
          <% for (var i = 0; i < class1.length; i ++) { %>
          <tr>
            <td><%- class1[i].productName %></td>
            <td><%- class1[i].productLine %></td>
            <td><%- class1[i].total_ventas %></td>
            <td><%- class1[i].total_compradores %></td>
          </tr>
          <% } %>
        </table>
      </div>
    </div>
  </body>
</html>
